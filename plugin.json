{
  "name": "enfold-llm",
  "version": "1.0.0",
  "description": "GitOps plugin for WordPress/Enfold sites that works with LLM assistants",
  "author": "Enfold LLM Contributors",
  "license": "MIT",
  "homepage": "https://github.com/tuvens/enfold-llm",
  "keywords": ["wordpress", "enfold", "gitops", "llm", "claude", "deployment"],
  "engines": {
    "claude": ">=1.0.0"
  },
  "files": [
    "commands/",
    "context/",
    "templates/",
    "wordpress/",
    "CLAUDE.md",
    "README.md"
  ],
  "commands": {
    "wp-create-page": "commands/wp-create-page.md",
    "wp-update-page": "commands/wp-update-page.md", 
    "wp-pull-page": "commands/wp-pull-page.md",
    "wp-setup": "commands/wp-setup.md",
    "wp-status": "commands/wp-status.md",
    "wp-theme": "commands/wp-theme.md"
  },
  "configuration": {
    "file": ".claude-wp.json",
    "schema": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "type": "object",
      "properties": {
        "wordpress_url": {
          "type": "string",
          "description": "Production WordPress URL"
        },
        "staging_url": {
          "type": "string",
          "description": "Staging WordPress URL"
        },
        "theme": {
          "type": "string",
          "enum": ["enfold"],
          "default": "enfold",
          "description": "WordPress theme (currently only Enfold supported)"
        },
        "content_types": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["pages", "posts", "portfolio", "layouts"]
          },
          "default": ["pages"],
          "description": "Content types to manage via GitOps"
        },
        "default_branch": {
          "type": "string",
          "default": "main",
          "description": "Branch that deploys to production"
        },
        "staging_branch": {
          "type": "string",
          "default": "staging",
          "description": "Branch that deploys to staging"
        }
      },
      "required": ["wordpress_url"]
    }
  },
  "context": [
    "context/workflow-rules.md",
    "context/worktree-guide.md",
    "context/claude/enfold-shortcodes.md",
    "context/claude/theme-customization.md"
  ],
  "installation": {
    "requires": [
      "WordPress 5.0+",
      "Enfold theme",
      "GitHub repository with Actions enabled"
    ],
    "steps": [
      "Copy templates/ to your project root",
      "Install wordpress/enfold-rest-meta plugin",
      "Configure GitHub Secrets (USERNAME, APP_PASSWORD)",
      "Set up repository variables (PRODUCTION_URL, STAGING_URL)"
    ]
  }
}
{
  "name": "enfold-llm",
  "version": "1.0.0",
  "description": "GitOps plugin for WordPress/Enfold sites that works with LLM assistants",
  "author": "Enfold LLM Contributors",
  "license": "MIT",
  "homepage": "https://github.com/tuvens/enfold-llm",
  "keywords": ["wordpress", "enfold", "gitops", "llm", "claude", "deployment"],
  "engines": {
    "claude": ">=1.0.0"
  },
  "files": [
    "commands/",
    "context/",
    "templates/",
    "wordpress/",
    "CLAUDE.md",
    "README.md"
  ],
  "commands": {
    "wp-create-page": "commands/wp-create-page.md",
    "wp-update-page": "commands/wp-update-page.md", 
    "wp-pull-page": "commands/wp-pull-page.md",
    "wp-setup": "commands/wp-setup.md",
    "wp-status": "commands/wp-status.md",
    "wp-theme": "commands/wp-theme.md"
  },
  "context": [
    "context/claude/workflow-rules.md",
    "context/claude/enfold-shortcodes.md",
    "context/claude/theme-customization.md"
  ],
  "installation": {
    "requires": [
      "WordPress 5.0+",
      "Enfold theme",
      "GitHub repository with Actions enabled"
    ],
    "steps": [
      "Copy templates/ to your project root",
      "Install wordpress/enfold-rest-meta plugin",
      "Configure GitHub Secrets (USERNAME, APP_PASSWORD)",
      "Set up repository variables (PRODUCTION_URL, STAGING_URL)"
    ]
  }
}
